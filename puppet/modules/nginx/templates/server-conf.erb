server {
  listen 80;
  #listen [::]:80 ipv6only=on;

  server_name <%= @name %>.dev;

  location / {
    root /srv/www/<%= @name %>;
    index index.html;
    try_files $uri $uri/ =404;
  }

  location /static {
    alias /srv/www/<%= @socket %>/src/static;
  }

  location /api {
    include uwsgi_params;
    uwsgi_pass unix:///tmp/<%= @socket %>.sock;
  }
}